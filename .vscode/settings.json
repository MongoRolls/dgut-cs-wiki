{
  "cSpell.words": [
    "Acho",
    "astrojs",
    "bantang",
    "bilibili",
    "bvid",
    "dgut",
    "hongshen",
    "jinyu",
    "Uniapp"
  ],
  "files.associations": {
    "*.mdx": "markdown"
  },
//   "markdown.copyFiles.destination": "${projectRoot}/${documentBaseName}/", // 修改为项目根目录
  "markdown.copyFiles.destination": {
    "**/*.{md,mdx}": "${documentWorkspaceFolder}/src/assets/blog/${documentBaseName}/"
  },
  "markdown.copyFiles.filePrefix": {
    "**/*.{md,mdx}": "${documentBaseName}-${currentDate|YYYYMMDD}-"
  },
  "markdown.copyFiles.overwriteBehavior": "nameIncrementally",
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[mdx]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  }
}

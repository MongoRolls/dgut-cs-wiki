#!/bin/bash



echo "\033[34m开始执行类型检查...\033[0m"
if ! pnpm tsc; then
    echo "\033[31m❌ 类型检查失败！请修复以上错误后再提交。\033[0m"
    exit 1
fi
echo "\033[32m✅ 类型检查通过！\033[0m"

echo "\033[34m开始执行代码风格检查...\033[0m"
if ! pnpm lint-staged; then
    echo "\033[31m❌ 代码风格检查失败！请修复以上错误后再提交。\033[0m"
    echo "\033[31m❌ 代码风格检查失败！请修复以上错误后再提交。\033[0m"
    echo "\033[31m❌ 代码风格检查失败！请修复以上错误后再提交。\033[0m"
    exit 1
fi
echo "\033[32m✅ 代码风格检查通过！\033[0m"

echo "\033[32m✨ 所有检查都通过了！\033[0m"
